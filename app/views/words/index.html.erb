
<%= render 'form', word: @word %>

<h1>Words</h1>

<table>
  <thead>
    <tr>
      <th>Word</th>
      <th>Length</th>
      <th>Sub word</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @words.each do |word| %>
      <tr>
        <td><%= word.word %></td>
        <td><%= word.sub_length %></td>
        <td><%= word.sub_word %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Word', new_word_path %>


