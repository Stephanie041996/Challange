
<%= render 'form', word: @word %>
<br>
<h1>Words</h1>

<table>
  <thead>
    <tr>
      <th>Word</th>
      <th>Length</th>
      <th>Sub word</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @words.each do |word| %>
      <tr>
        <td><%= word.word %></td>
        <td><%= word.sub_length %></td>
        <td><%= word.sub_word %></td>
        <td><%= link_to 'Show', word %></td>
        <td><%= link_to 'Edit', edit_word_path(word) %></td>
        <td><%= link_to 'Destroy', word, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

